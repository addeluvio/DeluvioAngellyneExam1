<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bgcolor" >


    <LinearLayout
        android:layout_width="161dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="211dp"
        android:layout_marginStart="41dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="41dp"
        android:background="@color/bg1" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="Note1"
            style="@style/Textview" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:text="Lorem ipsum dolor sit,amet consectetur adiscing elit"
            style="@style/Textview" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="162dp"
        android:layout_height="187dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="41dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="41dp"
        android:background="@color/bg2" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note 1"
            style="@style/Textview" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="213dp"
            style="@style/Textview"
            android:text="Lorem ipsum dolor sit amet, consectetur adipscing elit. Ut interdum enim vitae libero tempus placerat." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="148dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:background="@color/bg3">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/noting" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="145dp"
        android:layout_height="222dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:background="@color/bg4">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="88dp"
            android:layout_height="112dp"
            app:srcCompat="@drawable/note2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note 2"
            style="@style/Textview" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:text="Lorem ipsum dolor sit amet,"
            style="@style/Textview" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="31dp"
        app:srcCompat="@drawable/personal"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="59dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="87dp"
        android:text="Personal Notes"
        android:layout_alignLeft="@+id/imageView"
        style="@style/Textview" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="72dp"
        android:layout_height="53dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/office" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="61dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:text="Office Notes"
        style="@style/Textview" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="58dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginEnd="58dp"
        app:srcCompat="@drawable/note"
        android:layout_alignParentRight="true"
        android:layout_marginRight="58dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView3"
        android:layout_below="@+id/imageView3"
        android:text="Public Notes"
        android:layout_alignLeft="@+id/imageView3"
        style="@style/Textview" />

</RelativeLayout>